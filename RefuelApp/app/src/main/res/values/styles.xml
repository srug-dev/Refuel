<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_color_dark</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="colorPrimary">@color/blue_gray_50</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- Customize your theme here. -->
        <item name="android:logo">@color/transparent</item>
        <item name="android:background">@color/primary_color_dark</item>
        <item name="android:displayOptions">homeAsUp|showCustom</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin_short</item>
    </style>

</resources>
